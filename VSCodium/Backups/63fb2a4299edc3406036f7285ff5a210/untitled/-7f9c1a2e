#To write a python program to search a given number using linear search method.
def linear_search(li,ele):
    flag=False
    for i in li:
        if i==ele:
            flag=True
    if(flag==True):
        print("Element found")
    else:
        print("Element not found")
lis=[]
terms=int(input("Enter the number of terms :"))
for i in range(0,terms):
    lis.append(int(input("Enter the element :")))
find_ele=int(input("Enter the elements to be searched :"))
linear_search(lis,find_ele)


